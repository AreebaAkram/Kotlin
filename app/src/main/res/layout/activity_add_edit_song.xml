<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp">

    <EditText
        android:id="@+id/EdtSongTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Song Title"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/EdtArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Artist Name"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/EdtSongTitle"/>
    <EditText
        android:id="@+id/EdtSongImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Image URL"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/EdtArtist" />

    <Button
        android:id="@+id/BtnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Song"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/EdtSongImage" />
</androidx.constraintlayout.widget.ConstraintLayout>
